{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@theme/*": ["theme/*"],
      "@app-types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules", "dist", "android", "ios"]
}
